#public_profile.bucket
  = form_for current_user do |f|
    %p
      = f.label :full_name
      %br/
      =f.text_field :full_name
    %p
      = f.label :about_me
      %br/
      =f.text_area :about_me, :rows => 8
    %p
      = f.label :skills
      %br/
      =f.text_area :skills, :rows => 8
    %p
      = f.label :availability
      %br/
      =f.text_field :availability
    %p
      = f.label :time_zone
      %br/
      =f.text_field :time_zone
    %p
      = f.label :website
      %br/
      =f.text_field :website
    %p
      = f.label :twitter_id
      %br/
      =f.text_field :twitter_id
    %p
      = f.label :github_id
      %br/
      =f.text_field :github_id
    %br/
    %p= f.submit "Update"
