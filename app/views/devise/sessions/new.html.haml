%secsion#login.form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %h2 Log in

    %div.form-body
      %p
        = f.label :email, "Username or Email"
        %br/
        = f.text_field :email
      %p
        = f.label :password
        %br/
        = f.password_field :password
      - if devise_mapping.rememberable?
        %p
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Log in"
